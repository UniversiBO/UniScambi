{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
<ul class="pagination">
    {% if first is defined and current != first %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">&laquo;</a>
        </li>
    {% else %}
        <li class="disabled">
            <a href="#">&laquo;</a>
        </li>    
    {% endif %}

    {% if previous is defined %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lsaquo;</a>
        </li>
    {% else %}
        <li class="disabled">
            <a href="#">&lsaquo;</a>
        </li>    
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </li>
        {% else %}
            <li class="active"><a href="#">{{ page }} <span class="sr-only">(current)</span></a></li>
        {% endif %}

    {% endfor %}

    {% if next is defined %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">&rsaquo;</a>
        </li>
    {% else %}
        <li class="disabled">
            <a href="#">&rsaquo;</a>
        </li>    
    {% endif %}

    {% if last is defined and current != last %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">&raquo;</a>
        </li>
    {% else %}
        <li class="disabled">
            <a href="#">&raquo;</a>
        </li>    
    {% endif %}
</ul>
{% endif %}